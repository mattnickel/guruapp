<div class= "header">
	<div class = "container">
		<div class="row">
			<span class=" three columns">
				<%= link_to home_path do%>
					<img src="/assets/my_guru_logo" class= "logo">
				<%end%>
			</span>

        <span class="offset-by-four five columns">

				  <% if current_user %>
			      <!-- Logged in as <%= current_user.email %>. -->
			      <%= link_to "Dashboard", dashboard_path, class: "button" %>
			      <%= link_to "Guru Logout", destroy_user_session_path, class: "button" %>
			    <% else %>
			      <%= link_to "Sign up", new_user_registration_path, class: "button" %>
			      <%= link_to "Sign in", new_user_session_path, class: "button right" %>
			    <% end %>
			  </span>
			</div>
		</div>
  </div>
</div>