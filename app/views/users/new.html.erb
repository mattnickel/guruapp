<div class = "container">
      <div class="row">
        <div class="five columns card">
          <h5>Sign Up As A Gurus</h5>

          <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
              <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name %>
            </div>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password %>
            </div>
            <div class="actions"><%= f.submit "Sign Up" %></div>
          <% end %>
        </div>
      </div>
</div>