<div class = "container">
	<div class ="dashboard dashboard--grid dashboard__bg-img">
		<%= render "shared_partials/sidemenu" %>
			
		<div class = "main">
			<div data-page = "3" class = "page is-active coach-message-view"> 
				<div class="body-content coach-message-view__body cmv__body--scroll cmv-grid-style">
          <% @users.each do |user| %>
				  	<div class ="mv-thumbnail">
							<%if user.avatar.attached? %>
            		<%= image_tag(user.avatar)%>
							<% else %>
								<span>no image available</span>
							<% end %> 
					  	<div class = "thumbnail__image--overlay mv-thumbnail--overlay">
						  	<div class = "thumbnail__image--overlay-text thumbnail-user__details ">
						  		<span class="material-icons md-light md-36 msg_icons">chat_bubble</span>
							  	<div class="user-details__text">
							  		<p class = "thumbnail-video__text thumbnail-video__title user-name"><%=user.username%></p>
							  		<p class = "thumbnail-video__text thumbnail-video__author user-description"><%= user.description%></p>
							  	</div>	
						  	</div>
						  </div>
					  </div>
          <%end%>
				</div>
			</div>
		</div>

		<%= render "shared_partials/notifications" %>

			
	</div>	
</div>