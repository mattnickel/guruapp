<div class="container">
  <div class="dashboard edit--grid dashboard__bg-img">
    <div class="row ">
      <div class="twelve columns edit-view-header">
        <%= link_to dashboard_path, class: "manage-channel-link" do %> 
        <div class="edit-view-header">
          <span class="material-icons">arrow_back_ios</span> 
          <p>Manage Channel</p> 
        </div>
        <%end%>      
      </div>
    </div>
   
<%# ----------- %>
    <div class="row upload-video-view">
        <div class="seven columns video-view">
          <div class="video-view-container video-view--size">
            <% if @video.video.attached? %>
              <%= video_tag(url_for(@video.video), controls:'', class: 'video-player')%>
            <% else %>
              <span> Video not Available </span> 
            <% end %>
          </div>
        </div>

        <div class="five columns">
          <div class="video-form-container control">
            <div class="video-details">
              <div class="video--show_title">
                <p class ="default-text">
                  <strong>Title</strong>
                </p>
                <div class="show__title-box">
                <%= @video.title %>
                </div>
                
                
              </div>
              <div class="video--show_description">
                <p class ="default-text">
                  <strong>Description</strong>
                </p>
                <div class="show__description-box">
                <%= @video.description %>
                </div>
                
              </div>

            </div>
        
            <div class="video-images">
                <div id="video-image-container">
                <h5 class ="default-text">Video Image</h5>
                    <div id="video-image-border" class = "image-holder">
                    
                        <% if @video.image.attached? %>
                            <%= image_tag(@video.image, class: "thumbnail__img") %>  
                        <% else %>
                            <span class="none_msg">no available image</span>
                        <% end %>
                    </div>
                </div>
                <div id="social-image-container">
                <h5 class ="default-text">Social Image</h5>
                    <div id="video-image-border" class = "image-holder">
                        <% if @video.social_image.attached? %>
                            <%= image_tag(@video.social_image, class: "thumbnail__img") %>  
                        <% else %>
                            <span class="none_msg">no available image</span>
                        <% end %>
                    </div>
              </div>

            </div>  
          </div>
        </div>
          
      </div>
      <div class="row">
        <div class="actions button-area">
            <%= link_to "Edit", edit_video_path(@video), class:"button btn-transp btn-style btn-text" %>
            <%= link_to 'Back', videos_path, class:"button btn-style btn-text " %>             
        </div>
      </div>
    </div>	

<%# ----- %>
      </div>
</div>