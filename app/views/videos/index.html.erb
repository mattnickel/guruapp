<div class="container">
	<div class="dashboard dashboard--grid dashboard__bg-img">
		<%= render "shared_partials/sidemenu" %>
		<div class="main main--border">
			<div class="my-channel">
				<div class="my-channel__body"> 
					<h6 class="dashboard__header">My Channel</h6>
					<section class="upload-video">
						<div class="upload-video__body my-channel--grid">
							<div class="upload-video-area">
								<div class="overlay__icon upload-icon"> 
									<a href="/videos/new" class="material-icons md-34 md-light" title="Upload Video">upload</a>
								</div>
							</div>
						</div>
					</section>
					<section class="pub_videos dashboard__section">
						<h6 class="dashboard__section__title">Published Videos</h6>
						<div class="body__content my-channel--grid pub-videos__body ">
							<% @my_published_videos.each do |video| %>
								<div class="thumbnail my-channel__thumbnail" title="<%= video.title %>">
									<% if video.thumbnail.attached? %>
										<%= image_tag(video.thumbnail, class: "thumbnail__img") %>  
									<% else %>
										<span class="none-msg">no available image</span>
									<% end %>
									<div class="thumbnail__img--overlay">
											<p class="thumbnail__img--overlay__text thumbnail__content-views-count"><%= video.viewer_count %></p>
										<div class="overlay__icon edit-icon">
											<%= link_to edit_video_path(video.record) do %>
												<%= content_tag :span, "edit", :class => "material-icons md-34 md-light" %>
											<% end %>
										</div>	
										<div class="thumbnail-video__details">
											<p class="thumbnail-video__text thumbnail-video__title thumbnail-video__text--sml" ><%= video.title %></p>
											<p class="thumbnail-video__text thumbnail-video__author"><%= video.author %></p>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</section>
					<section class="unpub_videos dashboard__section" >
						<h6 class="dashboard__section__title">Unpublished Videos</h6>
						<div class="body__content my-channel--grid unpub-videos__body">
							<% @my_unpublished_videos.each do |video| %>
								<div class="thumbnail my-channel__thumbnail" title="<%= video.title %>">
									<% if video.thumbnail.attached? %>
										<%= image_tag(video.thumbnail, class: "thumbnail__img") %>  
									<% else %>
										<span class="none-msg">no available image</span>
									<% end %>
									<div class="thumbnail__img--overlay">
											<p class="thumbnail__img--overlay__text thumbnail__content-views-count"><%= video.viewer_count %></p>
										<div class="overlay__icon edit-icon">
											<%= link_to edit_video_path(video.record) do %>
												<%= content_tag :span, "edit", :class => "material-icons md-34 md-light" %>
											<% end %>
										</div>	
										<div class="thumbnail-video__details">
											<p class="thumbnail-video__text thumbnail-video__title thumbnail-video__text--sml" ><%= video.title %></p>
											<p class="thumbnail-video__text thumbnail-video__author"><%= video.author %></p>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</section>	
				</div>					
			</div>
		</div>
		<%# <%= render "shared_partials/notifications" %>
	</div>	
</div>

<script>
$(document).ready(function(){
   $(".active").removeClass("active");
   $("#mychannel-link").addClass("active");
});
</script>
