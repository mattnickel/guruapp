<div class= "header">
	<div class = "container">
		<div class="row">
			<span class=" three columns">
				<img src="/assets/lm_logo" class= "logo">
			</span>
        <span class="offset-by-seven two columns">

				  <% if current_user.present? %>
			      <div>Logged in as <%= current_user.email %></div>
			      <% link_to "Guru Portal", logout_path %>
			    <% else %>
			      <% link_to "Guru Portal", signup_path %>
			      <%= link_to "Guru Login", login_path %>
			    <% end %>
			  </span>
			</div>
		</div>
  </div>
</div>