<div class = "container">
	<div class ="dashboard dashboard--grid dashboard__bg-img">
		<%= render "shared_partials/sidemenu" %>
			
		<div class = "main">
			<div data-page = "2" class = "page my-channel-page">
					<div class ="my-channel-body"> 
						<h6 class = "dashboard__header">My Channel</h6>
						<section id = "up_video">
							<div class = "up-video-body mc-grid-style">
								<div class = "upload-area"> 
								  <%=link_to 'New Upload', videos_new_path %>														
								</div>
							</div>
						</section>
						<section id = "pub_videos" class = "dashboard__section">
							<h6 class = "dashboard__section__title">Published Videos</h6>
							<div class = "body__content pub-videos-body mc-grid-style">
								<div class ="mc-thumbnail">
									<img class = "thumbnail__img" src= <%=asset_path("lm_logo2.png")%> alt="Insert Video Thumbnail here">
									<div class = "thumbnail__img--overlay">
										<p class = "thumbnail__img--overlay__text thumbnail__video-views-count">112</p>
									</div>
								</div>
							</div>
						</section>
						<section id = "un_pub_videos" class = "dashboard__section" >
							<h6 class = "dashboard__section__title">Unpublished Videos</h6>
							<div class = "body__content un-pub-videos-body mc-grid-style">
								<div class ="mc-thumbnail">
									<img class = "thumbnail__img un-pub-img" src= <%=asset_path("lm_logo2.png")%> alt="Insert Video Thumbnail here">
									<div class = "thumbnail__img--overlay">
										<p class = "thumbnail__img--overlay__text thumbnail__video-views-count">112</p>
									</div>
								</div>
								<div class ="mc-thumbnail">
									<img class = "thumbnail__img un-pub-img" src= <%=asset_path("lm_logo2.png")%> alt="Insert Video Thumbnail here">
									<div class = "thumbnail__img--overlay">
										<p class = "thumbnail__img--overlay__text thumbnail__video-views-count">112</p>
									</div>
								</div>
								<div class ="mc-thumbnail">
									<img class = "thumbnail__img un-pub-img" src= <%=asset_path("lm_logo2.png")%> alt="Insert Video Thumbnail here">
									<div class = "thumbnail__img--overlay">
										<p class = "thumbnail__img--overlay__text thumbnail__video-views-count">112</p>
									</div>
								</div>
								<div class ="mc-thumbnail">
									<img class = "thumbnail__img un-pub-img" src= <%=asset_path("lm_logo2.png")%> alt="Insert Video Thumbnail here">
									<div class = "thumbnail__img--overlay">
										<p class = "thumbnail__img--overlay__text thumbnail__video-views-count">112</p>
									</div>
								</div>
							</div>
							
					</section>
				</div>					
			</div>

			
		</div>

		<%= render "shared_partials/notifications" %>

			
	</div>	
</div>

<script>
$(document).ready(function(){
   $(".active").removeClass("active");
   $("#mychannel-link").addClass("active");
});
</script>

