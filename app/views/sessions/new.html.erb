
<div class = "container">
			<div class="row">
				<div class="five columns card">
					<h5>Welcome Guru, we have been expecting you</h5>
			<%= form_tag sessions_path do %>
			  <div class="field">
			    <%= label_tag :email %><br />
			    <%= text_field_tag :email, params[:email] %>
			  </div>
			  <div class="field">
			    <%= label_tag :password %><br />
			    <%= password_field_tag :password %>
			  </div>
			  <div class="actions"><%= submit_tag "Log In" %></div>
			<% end %>
			<p>Click here to <%= link_to "Sign up", signup_path  %> instead. </p>
		</div>
		</div>
	</div>
